<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_1"
        android:background="#fff68f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menjumlahkan 2 Buah Bilangan"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rlayout_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RelativeLayout
        android:id="@+id/rlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_1">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan bilangan pertama"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/et_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_2"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan bilangan kedua"
            android:textSize="20sp"
            android:layout_below="@id/et_1"
            android:textColor="@android:color/black"
            android:paddingVertical="10dp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/et_2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_3"
            android:paddingVertical="10dp"
            android:textSize="20sp"/>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Bilangan"
        android:background="#fffcdc"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/rlayout_1"
        app:layout_constraintBottom_toTopOf="@id/llayout_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/llayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/et_3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>